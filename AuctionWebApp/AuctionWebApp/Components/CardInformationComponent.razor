<MudCard Class="pa-4 ma-2" Elevation="4">
    <MudStack Spacing="2">
        <MudText Typo="Typo.h6">Payment Method</MudText>
        <MudDivider />
        <MudGrid>
            <MudItem xs="6">
                <MudText Color="Color.Secondary" Typo="Typo.subtitle2">Brand</MudText>
                <MudText Typo="Typo.body1">@PaymentMethod?.Brand</MudText>
            </MudItem>
            <MudItem xs="6">
                <MudText Color="Color.Secondary" Typo="Typo.subtitle2">Last 4 Digits</MudText>
                <MudText Typo="Typo.body1">@PaymentMethod?.Last4</MudText>
            </MudItem>
            <MudItem xs="6">
                <MudText Color="Color.Secondary" Typo="Typo.subtitle2">Expiration Month</MudText>
                <MudText Typo="Typo.body1">@PaymentMethod?.ExpMonth</MudText>
            </MudItem>
            <MudItem xs="6">
                <MudText Color="Color.Secondary" Typo="Typo.subtitle2">Expiration Year</MudText>
                <MudText Typo="Typo.body1">@PaymentMethod?.ExpYear</MudText>
            </MudItem>
        </MudGrid>
    </MudStack>
</MudCard>