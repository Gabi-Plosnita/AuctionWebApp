<div style="width: 80%; margin: 0 auto; margin-top: 40px;">
	<MudTable Items="categories"
			  Style="background-color: #f5f7fa; border: 1px solid #ddd; border-radius: 8px;"
			  Hover="true"
			  Loading="@_loading"
			  Breakpoint="Breakpoint.Sm"
			  LoadingProgressColor="Color.Info">
		<HeaderContent>
			<MudTh Style="width: 25%; border: 1px solid grey; text-align: center; vertical-align: middle;">Id</MudTh>
			<MudTh Style="width: 25%; border: 1px solid grey; text-align: center; vertical-align: middle;">Name</MudTh>
			<MudTh Style="width: 40%; border: 1px solid grey; text-align: center; vertical-align: middle;">Image</MudTh>
			<MudTh Style="width: 5%; border: 1px solid grey; text-align: center; vertical-align: middle;">Edit</MudTh>
		</HeaderContent>
		<RowTemplate>
			<MudTd DataLabel="Id" Style="border: 1px solid grey; text-align: center; vertical-align: middle;">@context.Id</MudTd>
			<MudTd DataLabel="Name" Style="border: 1px solid grey; text-align: center; vertical-align: middle;">@context.Name</MudTd>
			<MudTd DataLabel="Image" Style="border: 1px solid grey; text-align: center; vertical-align: middle;">
				@if (!string.IsNullOrEmpty(context.ImageUrl))
				{
					<img src="@($"{AppSettings.ApiUrl}{context.ImageUrl}")"
						 class="img-thumbnail"
						 style="width: 100px; height: auto;" />
				}
				else
				{
					<MudAvatar Size="Size.Medium"
							   Icon="@Icons.Material.Filled.ImageNotSupported" />
				}
			</MudTd>
			<MudTd DataLabel="Edit" Style="border: 1px solid grey; text-align: center; vertical-align: middle;">
				<MudIconButton Icon="@Icons.Material.Filled.Edit"
							   Color="Color.Primary"
							   Size="Size.Small"
							   OnClick="@(() => NavigateToEditCategoryPage(context))"
							   AriaLabel="Edit Category" />
			</MudTd>
		</RowTemplate>
		<PagerContent>
			<MudTablePager PageSizeOptions="@RowsPerPageOptions" />
		</PagerContent>
	</MudTable>
</div>




