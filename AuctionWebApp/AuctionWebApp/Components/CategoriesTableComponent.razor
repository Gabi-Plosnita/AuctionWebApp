<h1 class="text-center mt-10 mb-20">Categories</h1>

<MudTable Items="categories"
		  Style="background-color: #f5f7fa; border: 1px solid #ddd; border-radius: 8px;"
		  Hover="true"
		  Loading="@_loading"
		  Breakpoint="Breakpoint.Sm"
		  LoadingProgressColor="Color.Info">
	<HeaderContent>
		<MudTh Style="width: 33%;">Id</MudTh>
		<MudTh Style="width: 33%;">Name</MudTh>
		<MudTh Style="width: 33%;">Image</MudTh>
	</HeaderContent>
	<RowTemplate>
		<MudTd DataLabel="Id" Style="width: 33%;">@context.Id</MudTd>
		<MudTd DataLabel="Name" Style="width: 33%;">@context.Name</MudTd>
		<MudTd DataLabel="Image" Style="width: 33%;">
			@if (!string.IsNullOrEmpty(context.ImageUrl))
			{
				<img src="@($"{AppSettings.ApiUrl}{context.ImageUrl}")"
					 class="img-thumbnail"
					 style="width: 200px; height: auto;" />
			}
			else
			{
				<MudAvatar Size="Size.Medium"
						   Icon="@Icons.Material.Filled.ImageNotSupported" />
			}
		</MudTd>
	</RowTemplate>
</MudTable>




