@if(Auction is not null)
{
    <div class="auction-details card shadow p-4 mb-5 bg-white rounded">
        <h2 class="mb-3 text-primary">@Auction.Title</h2>

        <p class="text-muted">@Auction.Description</p>

        <div class="image-gallery d-flex flex-wrap mb-4">
            @foreach (var image in Auction.Images)
            {
                <img src="@($"{AppSettings.ApiUrl}{image.ImageUrl}")" alt="Auction Image" class="auction-image m-2" />
            }
        </div>

        <div class="row">
            <div class="col-md-6">
                <p><strong>Starting Price:</strong> @Auction.StartingPrice:C</p>
                <p><strong>Current Price:</strong> @Auction.CurrentPrice:C</p>
            </div>
            <div class="col-md-6">
                <p><strong>Start Time:</strong> @Auction.StartTime.ToString("f")</p>
                <p><strong>End Time:</strong> @Auction.EndTime.ToString("f")</p>
            </div>
        </div>

        <p><strong>Status:</strong> <span class="badge bg-info text-dark">@Auction.Status</span></p>

        <hr />

        <h4 class="mt-4">Seller Information</h4>
        <p><strong>Email:</strong> @Auction.Seller.Email</p>
        <p><strong>Name:</strong> @Auction.Seller.FirstName @Auction.Seller.LastName</p>
        <p><strong>Address:</strong> @Auction.Seller.Address</p>

        @if (Auction.Driver is not null)
        {
            <hr />
            <h4 class="mt-4">Driver Information</h4>
            <p><strong>ID:</strong> @Auction.Driver.Id</p>
            <p><strong>Email:</strong> @Auction.Driver.Email</p>
        }

        @if (winner is not null)
        {
            <hr />
            <h4 class="mt-4">Winner Information</h4>
            <p><strong>Email:</strong> @winner.Email</p>
            <p><strong>Name:</strong> @winner.FirstName @winner.LastName</p>
            <p><strong>Address:</strong> @winner.Address</p>
        }
    </div>
}

