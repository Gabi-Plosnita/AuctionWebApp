@using AuctionWebApp.ViewModels

<div class="categories-slider-container">
    <button class="scroll-arrow scroll-arrow-left" @onclick="ScrollLeft" disabled="@disableLeftScroll">
        &lt;
    </button>

    <div @ref="scrollableDiv" class="categories-scroll-area" @onscroll="HandleScrollAsync">
        @if (CategoryViewModels != null)
        {
            @foreach (var category in CategoryViewModels)
            {
                <div class="category-item-wrapper">
                    <CategoryFilterOption Category="category" OnCategoryClicked="HandleCategorySelectionAsync" />
                </div>
            }
        }
    </div>

    <button class="scroll-arrow scroll-arrow-right" @onclick="ScrollRight" disabled="@disableRightScroll">
        &gt;
    </button>
</div>