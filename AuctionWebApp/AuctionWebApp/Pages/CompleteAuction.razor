@using AuctionWebApp.Components
@using Microsoft.AspNetCore.Authorization

@page "/auctions/{AuctionId:int}/assign-driver"
@attribute [Authorize(Roles = "Admin,SuperAdmin")]

@if (isLoading)
{
	<MudProgressCircular Color="Color.Primary"
						 Indeterminate="true"
						 Class="d-flex mx-auto mt-12" />
}
else
{
	<NavigationComponent Url="@ReturnUrl"></NavigationComponent>

	<MudButton OnClick="CompleteAuctionAsync"
			   Variant="Variant.Filled"
			   Color="Color.Primary"
			   Class="mt-2"
			   Style="width: 100%; font-size: 1.1rem; padding: 12px;">
		Complete
	</MudButton>
}

